{
  "connection": "amqp://bob:bob@localhost:5672/test",
  "reactors": [
    {
      "queue": "bob-q-1",
      "routing_key": "r.k.1",
      "exchange": "bob-x",
      "action": [
        {
          "to": { "exchange": "bob-x", "routingKey": "r.k.2" },
          "variables": {
            "uuid": { "type": "UuidGen" },
            "message_id": { "type": "UuidGen" }
          },
          "payload": { "Inline": "{\"message\": \"mon id est: {{ uuid }}\"}" },
          "headers": {
            "content_type": { "Lit": "application/json" },
            "message_id": { "VarRef": { "Str": "message_id" } }
          },
          "schedule": { "seconds": 0 }
        }
      ]
    },
    {
      "queue": "bob-q-2",
      "routing_key": "r.k.1",
      "exchange": "bob-x",
      "action": [
        {
          "to": { "exchange": "bob-x", "routingKey": "r.k.2" },
          "variables": {},
          "payload": { "Inline": "Message en dur" },
          "headers": {},
          "schedule": { "seconds": 0 }
        }
      ]
    }
  ]
}
